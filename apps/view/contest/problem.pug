extends ../../template/layout2.pug
block append scripts
	script(type="text/javascript", src="../../js/contest/problem.js")
block append comment
	div#container
		div#navbar.navbar-collapse.collapse(style={"text-align": "center"})
			ul.nav.navbar-nav(style={"display": "inline-block", "float": "none", "font-size": "1.5em"})
				li
					a(href='../index.html') zhbitOJ
				li
					a(href='../contest_list.html') Contests
				li
					a#c_show Problems
				li
					a#c_status Status
				li
					a#c_rank RankList
				li
					a(href='./contest_list.html') Notice
				li
					a(href='../discuss.html') Discuss
			div#userinfo.nav.navbar-nav.navbar-right
				button#userlogin.loginbtn Login
				button#userregister.loginbtn
					a(href='./view/user/register.html') Register
		div.container
			div(style={padding: '60px'})
				h2(style={"text-align": 'center'})#prm-info
				p(style={color: '#777', "text-align": 'center'})#prm-timelimit
				p(style={color: '#777', "text-align": 'center'})#prm-memorylimit
				div(style={padding: '60px'})
					div.problem-section(style={padding: '5px 0 5px 0'})
						label 题目描述
						div
							pre#prm-des(style={"white-space":"pre-wrap","word-wrap":"break-word"})
					div.problem-section(style={padding: '5px 0 5px 0'})
						label 输入
						div
							pre#prm-input(style={"white-space":"pre-wrap","word-wrap":"break-word"})
					div.problem-section(style={padding: '5px 0 5px 0'})
						label 输出
						div
							pre#prm-output(style={"white-space":"pre-wrap","word-wrap":"break-word"})
					div.problem-section(style={padding: '5px 0 5px 0'})
						label 样例输入
						div
							pre#prm-sp-input(style={"white-space":"pre-wrap","word-wrap":"break-word"})
					div.problem-section(style={padding: '5px 0 5px 0'})
						label 样例输出
						div
							pre#prm-sp-output(style={"white-space":"pre-wrap","word-wrap":"break-word"})
					div#h-author.problem-section(style={padding: '5px 0 5px 0'})
						label 作者
						div
							pre#prm-author(style={"white-space":"pre-wrap","word-wrap":"break-word"})
					div#h-hint.problem-section(style={padding: '5px 0 5px 0'})
						label 提示
						div
							pre#prm-hint(style={"white-space":"pre-wrap","word-wrap":"break-word"})
					div#h-source.problem-section(style={padding: '5px 0 5px 0'})
						label 来源
						div
							pre#prm-source(style={"white-space":"pre-wrap","word-wrap":"break-word"})
					div.problem-section(style={padding: '5px 0 5px 0'})
						form(enctype="multipart/form-data")
							div.form-group
								label.control-label 选择语言
								select#language.form-control
									option(value='C') C
									option(value='C++') C++
									option(value='Java') Java
							div.form-group
								label.control- 提交代码
								textarea#prmcode.form-control(rows="15")
							div.form-group(style={padding: '5px 0 5px 0'})
								input#prmsubmit.btn.btn-primary(type='button', value='提交', disabled)
		include ../../template/login.pug